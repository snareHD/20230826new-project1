#include<stdio.h>
int main()
{
	char a = -128;
	//原码  10000000000000000000000010000000
	//反码  11111111111111111111111101111111
	//补码  11111111111111111111111110000000
        //int->char类型截断             10000000
	//a(有符号位)的补码             10000000

        //这里的%d和%u没有改变a的类型，所以a先整形提升到int 类型在进行打印  11111111111111111111111110000000   --这个是a提升到int类型时的补码

	printf("%d\n", a);      
	printf("%u\n", a);
	//&d  --指的是打印十进制，有符号位
	//&u  --指的是打印十进制，无符号位

	return 0;
}
